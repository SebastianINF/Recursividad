#include <vcl.h>
#pragma hdrstop

#include "main.h"
#include "functions_numbers.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"

TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TForm1::ContarDigitos1Click(TObject *Sender)
{
	Cardinal number = StrToInt(Edit1->Text);
   Edit2 -> Text = IntToStr(sumar_digitos(number));
}
//---------------------------------------------------------------------------


void __fastcall TForm1::Menu2Click(TObject *Sender)
{
   Cardinal number = StrToInt(Edit1->Text);
	Edit2 -> Text = IntToStr(factorial(number));
}
//---------------------------------------------------------------------------

void __fastcall TForm1::SumarDigitos1Click(TObject *Sender)
{
	 Cardinal number = StrToInt(Edit1->Text);
	 Edit2 -> Text = IntToStr(sumar_digitos_pares(number));
}
